<section class="px-6 max-w-prose mx-auto md:px-0">
    <header class="overflow-hidden pt-6 pb-6 md:pt-12">
        <div class="pt-4 md:pt-6">
            <h1 class="heti--serif text-[2rem] font-bold leading-snug mb-4 md:mb-6 md:text-[2.6rem]">友情链接</h1>
        </div>
    </header>
    <div class="falling-text">
        <% site.data.friends.forEach(friend => { %>
            <a href="<%= friend.link %>" class="inline-flex transition-all m-2 bg-[#f6f6f6] dark:bg-[#222222] rounded-2xl justify-between items-center select-none cursor-pointer"
                 data-link="<%= friend.link %>" data-desc="<%= friend.desc %>">
                <img class="w-8 h-8 rounded-full" src="<%= friend.avatar %>" alt="<%= friend.name %>">
                <span class="px-5"><%= friend.name %></span>
            </a>
        <% }); %>
    </div>
</section>
